<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="270.0" minWidth="523.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.company.EncryptController">
   <center>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Canvas fx:id="canvas" height="200.0" onMouseClicked="#clickCanvas" onMouseDragged="#onMouseDragged" width="200.0" HBox.hgrow="ALWAYS" />
            <TextArea fx:id="textArea" HBox.hgrow="ALWAYS" />
            <Region HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
   </center>
   <bottom>
      <VBox fx:id="vBox" BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <RadioButton fx:id="whiteButton" mnemonicParsing="false" onAction="#colorOneClick" text="Color 1">
                     <HBox.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </RadioButton>
                  <RadioButton fx:id="redButton" mnemonicParsing="false" onAction="#colorTwoClick" text="Color 2">
                     <HBox.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </RadioButton>
                  <RadioButton fx:id="blueButton" mnemonicParsing="false" onAction="#colorThreeClick" text="Color 3">
                     <HBox.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </RadioButton>
                  <RadioButton fx:id="greenButton" mnemonicParsing="false" onAction="#colorFourClick" text="Color 4">
                     <HBox.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </RadioButton>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox fx:id="extraColors">
               <children>
                  <Region prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <RadioButton fx:id="yellowButton" mnemonicParsing="false" onAction="#colorFiveClick" text="Color 5">
                     <HBox.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </RadioButton>
                  <RadioButton fx:id="brownButton" mnemonicParsing="false" onAction="#colorSixClick" text="Color 6">
                     <HBox.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </RadioButton>
                  <RadioButton fx:id="blackButton" mnemonicParsing="false" onAction="#colorSevenClick" text="Color 7">
                     <HBox.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </RadioButton>
                  <RadioButton fx:id="indigoButton" mnemonicParsing="false" onAction="#colorEightClick" text="Color 8">
                     <HBox.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </RadioButton>
                  <Region prefWidth="200.0" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Region HBox.hgrow="ALWAYS" />
                  <CheckBox fx:id="showKeysButton" mnemonicParsing="false" onAction="#showKeys" text="Show Keys">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="12.0" />
                     </HBox.margin>
                  </CheckBox>
                  <ChoiceBox fx:id="binarySelector" onMouseReleased="#changeBinary" prefHeight="25.0" prefWidth="76.0">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin></ChoiceBox>
                  <Button mnemonicParsing="false" onAction="#encryptPainting" text="Encrypt!">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin></Button>
                  <Region HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false">
               <graphic>
                  <Button mnemonicParsing="false" onAction="#toMenu" text="Back" />
               </graphic>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
